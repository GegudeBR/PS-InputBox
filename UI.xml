<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="%Title%" Height="%WindowHeight%" Width="%WindowWidth%" ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen">
  <Grid>
    <Label x:Name="QuestionLabel" Content="%Question%" HorizontalAlignment="Left"
      VerticalAlignment="Top" Margin="5,0,0,0" FontSize="14"/>

    <Button Name="OKButton" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top"
      Margin="0,10,20,0" Width="%ButtonWidth%"/>
    <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top"
      Margin="0,35,20,0" Width="%ButtonWidth%" />

    <TextBox Name="NameTextBox" HorizontalAlignment="Center" VerticalAlignment="Bottom"
      Margin="5,10,5,10" Height="%TextBoxHeight%" Width="%TextBoxWidth%" FontSize="14"/>
  </Grid>
</Window>